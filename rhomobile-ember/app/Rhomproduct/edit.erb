<div class="container">
  <h1>Edit <%= @rhomproduct.name %></h1>
  <form role="form" method="POST" action="<%= url_for :action => :update %>">
    <input type="hidden" name="id" value="<%= @rhomproduct.object %>"/>
      
    <div class="form-group">
    <label >Name</label>
    
               <input type="text" id="rhomproduct[name]" name="rhomproduct[name]" value="<%= @rhomproduct.name %>" <%= placeholder("Name") %> />

    </div>
    <div class="form-group">
    <label >Brand</label>
                <input type="text" id="rhomproduct[brand]" name="rhomproduct[brand]"value="<%= @rhomproduct.brand %>" <%= placeholder("Brand") %> />

    </div>
    <div class="form-group">
    <label >Qty</label>
    
                <input type="text" id="rhomproduct[qty]" name="rhomproduct[qty]" value="<%= @rhomproduct.qty %>" <%= placeholder("Qty") %> />

    </div>
    <div >
     <input type="submit" value="Update" class="btn  btn-success"/>  
      <a href="<%= url_for :action => :index %>" class="btn btn-default ">Cancel</button></a>
    
  </div>          
  </form>
</div>


