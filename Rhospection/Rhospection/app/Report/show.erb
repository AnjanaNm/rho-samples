<div data-role="page" data-add-back-btn="false">

  <div data-role="header" data-position="inline">
    <h1><%= @report.status %></h1>
    <a href="<%= url_for :action => :index %>" class="ui-btn-left" data-icon="arrow-l" data-direction="reverse">
      Back
    </a>
    <a href="<%= url_for :action => :edit, :id => @report.object %>" class="ui-btn-right" data-icon="star">
      Edit
    </a>
  </div>

  <div data-role="content">
    <ul data-role="listview">
      
          <li>
            <div class="itemLabel">Status</div>
            <div class="itemValue"><%= @report.status %></div>
          </li>
      
          <li>
            <div class="itemLabel">Name</div>
            <div class="itemValue"><%= @report.name %></div>
          </li>
      
          <li>
            <div class="itemLabel">Datetaken</div>
            <div class="itemValue"><%= @report.datetaken %></div>
          </li>
      
          <li>
            <div class="itemLabel">Location</div>
            <div class="itemValue"><%= @report.location %></div>
          </li>
      
          <li>
            <div class="itemLabel">Author</div>
            <div class="itemValue"><%= @report.author %></div>
          </li>
      
    </ul>
  </div>

</div>
