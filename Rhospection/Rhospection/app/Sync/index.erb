	<script type="text/javascript">
$(document).ready(function() {
	if(!Rho.RhoConnectClient.isLoggedIn()){
		$('#loginpage').show();
		$('#syncpage').hide();
	}
	else
	{
		$('#loginpage').hide();
		$('#syncpage').show();

	}
 

  	Parse.initialize(parse_config.app_id, parse_config.key_js);
    

	$('#btnLogin').click(function(){
		Parse.User.logIn($('#login').val(), $('#password').val(), {
		      success: function(user) {
				$('#loginpage').hide();
				$('#syncpage').show();
				Rho.RhoConnectClient.login($('#login').val(),$('#password').val(), function(e){
					console.log(e);
					

				});
		      },
		      error: function(user, error) {
		      	console.log(user);
				$('.login-alert').html('<strong>Error</strong>: ' + error.message);
		      	$('.login-alert').show();

		      }
		    });


	});


  	Rho.RhoConnectClient.setNotification('Report',report_sync_notify);
	Rho.RhoConnectClient.setNotification('ReportItem',report_item_sync_notify);
	

	$('#btnSync').click(function(){
		
			Rho.RhoConnectClient.doSyncSource('Report',false,'');

		

	});

	$('#btnRegisterForm').click(function(){
	 	$('#login-register').val('');
		$('#password-register').val('');
		$('#password-confirm').val('');
		$('#email-register').val('');
			
		$('#btnRegister').show();
		$('.register .form-group').show();
		$('.register .alert').hide();	    
		$('.register').modal('show');
	});

	$('#btnForgot').click(function(){
		 $('.forgotPassword .email').val('');
		$('#btnPasswordReset').show();
		$('.forgotPassword .form-group').show();
		$('.forgotPassword .alert').hide();
		        
		$('.forgotPassword').modal('show');
	});

	$('#btnRegister').click(function(){
		var bOkToRegister = true;
		if($('#login-register').val() == '')
		{
			$('#login-register').parent().addClass('has-error');
			bOkToRegister = false;
		}
		else
		{
			$('#login-register').parent().removeClass('has-error');
		}
		if($('#password-register').val() == '')
		{
			$('#password-register').parent().addClass('has-error');
			bOkToRegister = false;
		}
		else
		{
			$('#password-register').parent().removeClass('has-error');
			if($('#password-register').val() != $('#password-confirm').val())
			{
				$('#password-register').parent().addClass('has-error');
				$('#password-confirm').parent().addClass('has-error');
				bOkToRegister = false;
			}
			else
			{
				$('#password-register').parent().removeClass('has-error');
				$('#password-confirm').parent().removeClass('has-error');
			}
		}
		
		if(bOkToRegister)
		{
			var user = new Parse.User();
			user.set("username", $('#login-register').val());
			user.set("password", $('#password-register').val());
			user.set("email", $('#email-register').val());
			 
			 
			user.signUp(null, {
			  success: function(user) {
			  	$('#btnRegister').hide();
			    $('.register .form-group').hide();
			    // Password reset request was sent successfully
			    $('.register .alert').addClass('alert-success');
			    $('.register .alert').html('Your account has been created successfully. Click the Cancel button and then login using the username and pasword provided.');
			    $('.register .alert').show();
			    
		
			  },
			  error: function(user, error) {
			    $('.register .form-group').show();
		    
			    $('.register .alert').addClass('alert-danger');
			    $('.register .alert').html("Error: " + error.code + " " + error.message);
			    $('.register .alert').show();
			  }
			});			
		}
	});

	$('#btnPasswordReset').click(function(){
		userEmail = $('.forgotPassword .email').val();
		Parse.User.requestPasswordReset(userEmail, {
		  success: function() {
		  	$('.forgotPassword .form-group').hide();
		    // Password reset request was sent successfully
		    $('.forgotPassword .alert').addClass('alert-success');
		    $('.forgotPassword .alert').html('Your password has been reset and you should receive an email with instructions for resetting. After it has been reset you may login');
		    $('.forgotPassword .alert').show();
		    $('#btnPasswordReset').hide();
		  },
		  error: function(error) {
		  	$('.forgotPassword .form-group').show();
		    
		    $('.forgotPassword .alert').addClass('alert-danger');
		    $('.forgotPassword .alert').html("Error: " + error.code + " " + error.message);
		    $('.forgotPassword .alert').show();

		    
		  }
		});
	});
});


function report_item_sync_notify(params)
{
 $('.list-group').append('<li class="list-group-item">Updated Report Items</li>');
}

function report_sync_notify(params)
{
	console.log('Sync Callback'+ JSON.stringify(params));
 $('.list-group').append('<li class="list-group-item">Updated Reports</li>');
 reports = Report.find('all');
 $('.list-group').append('<li class="list-group-item">Updating Report Items</li>');
 
 for(i=0;i<reports.length;i++)
 {
 	if(reports[i].get('object') != reports[i].get('reportid'))
 	{
 		console.log(reports[i].get('name')+' '+ reports[i].get('object'));
 		//This record did a sync and object changed to backend id
 		//now we have to fix the children records so they are linked properly with the backend id
 		reportItems = ReportItem.find('all',{
 			conditions:{
 				reportid: reports[i].get('reportid')
 			}
 		});
 		console.log(reportItems);
 		for(x=0;x<reportItems.length;x++)
 		{
 			console.log(reportItems[x].get('productid'));
 			reportItems[x].updateAttributes({
 				reportid: reports[i].get('object')
 			});
 		}
 		//then change reportid to be object so it doesn't catch it next time around
 		//only have to do this once 
 		reports[i].updateAttributes({reportid: reports[i].get('object')});
 	}
 }
 //sync report_items
 Rho.RhoConnectClient.doSyncSource('ReportItem',false,'');
 
}
</script>
